@model MwangiBlogApp.Models.EmailModel

<!-- s-content
    ================================================== -->
<section class="s-content s-content--top-padding s-content--narrow">


    <div class="row">





        <div class="row">
            <div class="col-six tab-full">
                <h4>Where to Find Me</h4>
                <address>
                    Moses Mbutha Mwangi<br />
                    <abbr title="My Physical Address in Durham">P A:</abbr>
                    3612 Weatherby Dr<br />
                    <abbr title="My personal Telephone number">P:</abbr>
                    919.491.1432
                </address>

            </div>

            <div class="col-six tab-full">
                <h4>Contact Info</h4>

                <p>
                    <address>
                        <strong>Support:</strong>   <a href="mosesmwangi1979@gmail.com">mosesmwangi1979@gmail.com</a><br />
                        <strong>Marketing:</strong> <a href="venzauber@gmail.com">venzauber@gmail.com</a>
                    </address>
                </p>

            </div>
        </div>



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <fieldset>

                <div class="form-group">
                    @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                </div>

                <div class="row">
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                </div>

                <div class="row">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "example@email.com" })
                    @Html.ValidationMessageFor(m => m.FromEmail)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
                </div>

                <div class="row">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
                </div>

                <div class="row">
                    @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @id = "editor", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="submit btn btn--primary btn--large full-width">Send Message</button>

            </fieldset>
        }

    </div> <!-- s-content__main -->

</section> <!-- end s-content -->
@section scripts{
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script type="text/javascript">$(function () { tinymce.init({ selector: '#editor' }); });</script>

} 